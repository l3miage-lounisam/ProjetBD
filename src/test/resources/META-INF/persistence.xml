<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="TEST">

        <class>l3miage.model.Abonne</class>
        <class>l3miage.model.Bornette</class>
        <class>l3miage.model.DefinitionStation</class>
        <class>l3miage.model.Location</class>
        <class>l3miage.model.Modele</class>
        <class>l3miage.model.NonAbonne</class>
        <class>l3miage.model.Station</class>
        <class>l3miage.model.Trajet</class>
        <class>l3miage.model.Velo</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/test"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDB103Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

    </persistence-unit>
</persistence>
